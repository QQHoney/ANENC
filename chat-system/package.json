{
  "name": "serv00-chat-system",
  "version": "1.0.0",
  "description": "专为Serv00免费主机优化的实时聊天系统，支持真实用户注册、好友系统、实时消息传递",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:logs": "pm2 logs --lines 100",
    "pm2:monit": "pm2 monit",
    "backup": "node scripts/backup.js",
    "monitor": "node scripts/monitor.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha tests/unit/*.test.js --timeout 5000",
    "test:integration": "mocha tests/integration/*.test.js --timeout 10000",
    "test:performance": "node tests/performance/load-test.js",
    "test:security": "node tests/security/security-test.js",
    "test:socket": "node tests/socket/socket-test.js",
    "test:watch": "mocha --watch tests/**/*.test.js",
    "test:report": "nyc --reporter=html --reporter=text mocha tests/**/*.test.js",
    "setup": "node scripts/setup.js",
    "deploy": "bash deploy.sh",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "serv00",
    "chat",
    "real-time",
    "websocket",
    "socket.io",
    "nodejs",
    "mysql",
    "jwt",
    "authentication",
    "messaging"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "pm2": "^5.3.1",
    "nodemon": "^3.0.2",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "nyc": "^15.1.0",
    "jsdoc": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/serv00-chat-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/serv00-chat-system/issues"
  },
  "homepage": "https://github.com/yourusername/serv00-chat-system#readme",
  "documentation": "https://github.com/yourusername/serv00-chat-system/tree/main/docs",
  "cpu": [
    ">=10%"
  ],
  "memory": "400M",
  "processes": 1,
  "serv00Optimized": true
}